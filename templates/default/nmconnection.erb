# This file maintained by Chef.  DO NOT EDIT!
[connection]
id=<%= @device %>
<% if @uuid -%>
uuid=<%= @uuid %>
<% end %>
<% if @vlan == true -%>
type=vlan
<% elsif @type == "bond" -%>
type=bond
<% else -%>
type=<%= @type.downcase! %>
<% end %>
interface-name=<%= @device %>
autoconnect-retries=1
<% if @onboot == true -%>
autoconnect=true
<% else -%>
autoconnect=false
<% end %>
<% if @bridge_device -%>
controller=<%= @bridge_device %>
master=<%= @bridge_device %>
port-type=bridge
slave-type=bridge
<% end %>
<% if @bond_master -%>
controller=<%= @bond_master %>
master=<%= @bond_master %>
port-type=bond
slave-type=bond
<% end %>

[bond]
<% if @bond_mode -%>
mode=<%= @bond_mode %>
<% end %>

[bridge]

[ethernet]
<% if @mac_address -%>
mac-address=<%= @mac_address %>
<% end %>
<% if @mtu -%>
mtu=<%= @mtu %>
<% end %>

[ipv4]
<% if @address and @netmask and @gateway -%>
address1=<%= @address %>/<%= @netmask %>,<%= @gateway %>
method=manual
<% elsif @address and @netmask -%>
address1=<%= @address %>/<%= @netmask %>
method=manual
<% elsif @address -%>
address1=<%= @address %>
method=manual
<% elsif %>
method=auto
<% end %>

[ipv6]
addr-gen-mode=default
method=auto
<% if @ipv6init == true -%>
method=auto
<% else -%>
method=disabled
<% end %>

[proxy]

[user]
org.freedesktop.NetworkManager.origin=nm-initrd-generator

[vlan]
<% if @vlan == true -%>
id=<%= @device.split(".")[1] %>
<% end %>
flags=1
