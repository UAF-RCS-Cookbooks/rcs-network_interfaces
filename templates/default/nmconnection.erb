# This file maintained by Chef.  DO NOT EDIT!
[connection]
id=<%= @device %>
<% if @uuid -%>
uuid=<%= @uuid %>
<% end %>
type=<%= @type.downcase! %>
autoconnect-retries=1
interface-name=<%= @device %>


[bond]

[bridge]

[ethernet]
<% if @mac_address -%>
mac-address=<%= @mac_address %>
<% end %>
<% if @mtu -%>
mtu=<%= @mtu %>
<% end %>

[ipv4]
<% if @address and @netmask and @gateway -%>
address1=<%= @address %>/<%= @netmask %>,<%= @gateway %>
method=manual
<% elsif @address and @netmask -%>
address1=<%= @address %>/<%= @netmask %>
method=manual
<% elsif @address -%>
address1=<%= @address %>
method=manual
<% elsif %>
method=auto
<% end %>

[ipv6]
addr-gen-mode=default
method=auto

[proxy]

[user]
org.freedesktop.NetworkManager.origin=nm-initrd-generator

[vlan]
<% if @vlan_id -%>
id=<%= @vlan_id %>
<% end %>
